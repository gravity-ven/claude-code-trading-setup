  "profiles": {
    "defaults": {
      "font": {
        "face": "FiraCode Nerd Font Mono",
        "size": 11,
        "weight": "normal"
      },
      "opacity": 95,
      "useAcrylic": false,
      "cursorShape": "filledBox",
      "colorScheme": "Spartan"
    },
    "list": [
      {
        "name": "Debian (WSL) - Spartan",
        "source": "Windows.Terminal.Wsl",
        "commandline": "wsl.exe -d Debian",
