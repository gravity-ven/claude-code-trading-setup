<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spartan Research Station - Correlation Matrix</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-color: #8B0000;
            --secondary-color: #B22222;
            --accent-color: #DC143C;
            --gold-color: #FFD700;
            --bg-dark: #0a1628;
            --bg-darker: #050b14;
            --bg-card: #12203a;
            --text-primary: #ffffff;
            --text-secondary: #b0b8c8;
            --border-color: #1e3a5f;
            --success-color: #00ff88;
            --danger-color: #FF5252;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            padding: 40px 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
        }

        .back-button {
            display: inline-block;
            margin-bottom: 30px;
            padding: 12px 30px;
            background: rgba(220, 20, 60, 0.15);
            color: var(--accent-color);
            text-decoration: none;
            border-radius: 8px;
            border: 1px solid var(--accent-color);
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .back-button:hover {
            background: var(--accent-color);
            color: white;
            transform: translateX(-5px);
        }

        .header {
            text-align: center;
            margin-bottom: 50px;
            padding: 50px 30px;
            background: linear-gradient(135deg, var(--primary-color), var(--bg-darker));
            border-radius: 12px;
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }

        .header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-color), var(--gold-color), var(--accent-color));
        }

        .header h1 {
            color: var(--gold-color);
            font-size: 3rem;
            margin-bottom: 15px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .header p {
            color: var(--text-secondary);
            font-size: 1.2rem;
            margin-top: 10px;
        }

        .status-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--bg-card);
            padding: 15px 30px;
            border-radius: 8px;
            margin-bottom: 30px;
            border: 1px solid var(--border-color);
        }

        .status-dot {
            width: 12px;
            height: 12px;
            background: var(--success-color);
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .section-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--gold-color);
            margin: 40px 0 25px 0;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--border-color);
        }

        .correlation-grid {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 40px;
            overflow-x: auto;
        }

        .matrix-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 700px;
        }

        .matrix-table th,
        .matrix-table td {
            padding: 15px;
            text-align: center;
            border: 1px solid var(--border-color);
            font-weight: 600;
        }

        .matrix-table th {
            background: rgba(139, 0, 0, 0.3);
            color: var(--gold-color);
            font-size: 1.1rem;
        }

        .matrix-table td {
            font-size: 1.2rem;
            font-weight: 700;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .matrix-table td:hover {
            transform: scale(1.1);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.3);
        }

        .corr-high-positive {
            background: linear-gradient(135deg, rgba(0, 255, 136, 0.3), rgba(0, 255, 136, 0.1));
            color: var(--success-color);
        }

        .corr-moderate-positive {
            background: linear-gradient(135deg, rgba(255, 215, 0, 0.3), rgba(255, 215, 0, 0.1));
            color: var(--gold-color);
        }

        .corr-low {
            background: linear-gradient(135deg, rgba(176, 184, 200, 0.2), rgba(176, 184, 200, 0.05));
            color: var(--text-secondary);
        }

        .corr-negative {
            background: linear-gradient(135deg, rgba(255, 82, 82, 0.3), rgba(255, 82, 82, 0.1));
            color: var(--danger-color);
        }

        .corr-self {
            background: rgba(139, 0, 0, 0.2);
            color: var(--text-primary);
            opacity: 0.5;
        }

        .insights-table {
            width: 100%;
            border-collapse: collapse;
        }

        .insights-table th,
        .insights-table td {
            padding: 20px;
            text-align: left;
            border: 1px solid var(--border-color);
        }

        .insights-table th {
            background: rgba(139, 0, 0, 0.3);
            color: var(--gold-color);
            font-size: 1.1rem;
            font-weight: 700;
        }

        .insights-table td {
            background: var(--bg-card);
            color: var(--text-primary);
            line-height: 1.8;
        }

        .insights-table tr:hover td {
            background: rgba(220, 20, 60, 0.1);
        }

        .signal-buy {
            color: var(--success-color);
            font-weight: 700;
        }

        .signal-sell {
            color: var(--danger-color);
            font-weight: 700;
        }

        .signal-neutral {
            color: var(--gold-color);
            font-weight: 700;
        }

        .legend {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-top: 30px;
            flex-wrap: wrap;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 20px;
            background: var(--bg-card);
            border-radius: 8px;
            border: 1px solid var(--border-color);
        }

        .legend-box {
            width: 40px;
            height: 25px;
            border-radius: 4px;
        }

        .info-card {
            background: linear-gradient(135deg, rgba(220, 20, 60, 0.15), rgba(139, 0, 0, 0.1));
            border: 2px solid var(--accent-color);
            border-radius: 12px;
            padding: 30px;
            margin: 30px 0;
        }

        .info-card h3 {
            color: var(--gold-color);
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .info-card p {
            color: var(--text-secondary);
            line-height: 1.8;
            font-size: 1.05rem;
        }

        .info-card ul {
            margin-top: 15px;
            padding-left: 25px;
        }

        .info-card li {
            color: var(--text-secondary);
            line-height: 2;
            font-size: 1.05rem;
        }

        .loading {
            text-align: center;
            padding: 60px;
            font-size: 1.3rem;
            color: var(--text-secondary);
        }

        .loading::after {
            content: '...';
            animation: dots 1.5s steps(4, end) infinite;
        }

        @keyframes dots {
            0%, 20% { content: '.'; }
            40% { content: '..'; }
            60%, 100% { content: '...'; }
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2rem;
            }

            .legend {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="index.html" class="back-button">‚Üê Back to Main Hub</a>

        <div class="header">
            <h1>üîó Correlation Matrix</h1>
            <p>Multi-Asset Correlation Analysis with Real-Time Trading Signals</p>
        </div>

        <div class="status-bar">
            <div>
                <span class="status-dot"></span>
                <span>Live Data (30-Day Rolling Correlation)</span>
            </div>
            <div id="lastUpdate">Last Updated: Loading...</div>
        </div>

        <!-- What is Correlation? -->
        <div class="info-card">
            <h3>üìñ What is Correlation?</h3>
            <p>
                <strong>Correlation measures how two assets move together.</strong> Values range from -1.00 to +1.00:
            </p>
            <ul>
                <li><strong style="color: var(--success-color);">+0.70 to +1.00 (Strong Positive):</strong> Assets move together. When one goes up, the other usually goes up too.</li>
                <li><strong style="color: var(--gold-color);">+0.30 to +0.70 (Moderate Positive):</strong> Assets tend to move in the same direction, but not always.</li>
                <li><strong style="color: var(--text-secondary);">-0.30 to +0.30 (Low/No Correlation):</strong> Assets move independently. Great for diversification!</li>
                <li><strong style="color: var(--danger-color);">-0.30 to -1.00 (Negative):</strong> Assets move in opposite directions. When one goes up, the other often goes down.</li>
            </ul>
        </div>

        <!-- Correlation Matrix -->
        <div class="section-title">üìä 30-Day Rolling Correlation Matrix</div>
        <div class="correlation-grid">
            <div id="matrixLoading" class="loading">Loading correlation data</div>
            <table class="matrix-table" id="correlationMatrix" style="display: none;">
                <thead>
                    <tr>
                        <th>Asset</th>
                        <th>S&P 500</th>
                        <th>Nasdaq</th>
                        <th>Russell 2000</th>
                        <th>Dow Jones</th>
                        <th>Bitcoin</th>
                        <th>Ethereum</th>
                    </tr>
                </thead>
                <tbody id="matrixBody">
                    <!-- Populated by JavaScript -->
                </tbody>
            </table>
        </div>

        <!-- Legend -->
        <div class="legend">
            <div class="legend-item">
                <div class="legend-box corr-high-positive"></div>
                <span>Strong Positive (+0.70 to +1.00)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box corr-moderate-positive"></div>
                <span>Moderate Positive (+0.30 to +0.70)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box corr-low"></div>
                <span>Low Correlation (-0.30 to +0.30)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box corr-negative"></div>
                <span>Negative (-0.30 to -1.00)</span>
            </div>
        </div>

        <!-- Trading Insights -->
        <div class="section-title">üí° Plain English Trading Insights</div>
        <div class="correlation-grid">
            <table class="insights-table">
                <thead>
                    <tr>
                        <th style="width: 25%;">Correlation Pair</th>
                        <th style="width: 15%;">Current Value</th>
                        <th style="width: 35%;">What It Means</th>
                        <th style="width: 25%;">Trading Signal</th>
                    </tr>
                </thead>
                <tbody id="insightsBody">
                    <tr>
                        <td colspan="4" class="loading">Loading insights</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- How to Use This -->
        <div class="info-card">
            <h3>üéØ How to Use Correlation for Trading</h3>
            <p><strong>Diversification Strategy:</strong></p>
            <ul>
                <li><strong>High Positive Correlation (>0.70):</strong> Don't buy both assets - you're doubling your risk without diversification. Pick the stronger one.</li>
                <li><strong>Low/Zero Correlation (0 to 0.30):</strong> Perfect for portfolio diversification! These assets provide independent returns.</li>
                <li><strong>Negative Correlation (<0):</strong> Natural hedge. When one drops, the other often rises. Great for risk management.</li>
            </ul>
            <p style="margin-top: 20px;"><strong>Market Regime Detection:</strong></p>
            <ul>
                <li><strong>Rising Stock-Crypto Correlation:</strong> Risk-on environment. All risky assets moving together.</li>
                <li><strong>Falling Stock-Crypto Correlation:</strong> Crypto decoupling from traditional markets. Possible crypto rally or stock correction.</li>
                <li><strong>Russell 2000 vs Large Caps:</strong> If Russell correlates strongly with S&P/Nasdaq, broad market strength. If it diverges, warning sign.</li>
            </ul>
        </div>
    </div>

    <script>
        // Asset symbols for API
        const ASSETS = {
            'sp500': { name: 'S&P 500', symbol: '^GSPC', emoji: 'üìà' },
            'nasdaq': { name: 'Nasdaq', symbol: '^IXIC', emoji: 'üíª' },
            'russell': { name: 'Russell 2000', symbol: '^RUT', emoji: 'üè¢' },
            'dow': { name: 'Dow Jones', symbol: '^DJI', emoji: 'üè≠' },
            'bitcoin': { name: 'Bitcoin', symbol: 'BTC-USD', emoji: '‚Çø' },
            'ethereum': { name: 'Ethereum', symbol: 'ETH-USD', emoji: 'Œû' }
        };

        const ASSET_ORDER = ['sp500', 'nasdaq', 'russell', 'dow', 'bitcoin', 'ethereum'];

        // Fetch correlation data from API
        async function fetchCorrelationData() {
            try {
                const response = await fetch('http://localhost:5004/api/correlations');
                const data = await response.json();

                if (data.success) {
                    return data.correlations;
                } else {
                    console.error('API error:', data.error);
                    return null;
                }
            } catch (error) {
                console.error('Fetch error:', error);
                return null;
            }
        }

        // Get correlation class for styling
        function getCorrelationClass(value) {
            if (value === null || value === undefined) return 'corr-low';
            if (value === 1.0) return 'corr-self';
            if (value >= 0.70) return 'corr-high-positive';
            if (value >= 0.30) return 'corr-moderate-positive';
            if (value >= -0.30) return 'corr-low';
            return 'corr-negative';
        }

        // Format correlation value
        function formatCorrelation(value) {
            if (value === null || value === undefined) return 'N/A';
            return value.toFixed(2);
        }

        // Build correlation matrix HTML
        function buildCorrelationMatrix(correlations) {
            const tbody = document.getElementById('matrixBody');
            tbody.innerHTML = '';

            ASSET_ORDER.forEach(rowAsset => {
                const tr = document.createElement('tr');

                // Asset name cell
                const th = document.createElement('th');
                th.textContent = `${ASSETS[rowAsset].emoji} ${ASSETS[rowAsset].name}`;
                tr.appendChild(th);

                // Correlation cells
                ASSET_ORDER.forEach(colAsset => {
                    const td = document.createElement('td');
                    const value = correlations[rowAsset]?.[colAsset];
                    td.textContent = formatCorrelation(value);
                    td.className = getCorrelationClass(value);

                    // Add tooltip
                    if (value !== null && value !== undefined && rowAsset !== colAsset) {
                        td.title = `${ASSETS[rowAsset].name} vs ${ASSETS[colAsset].name}: ${formatCorrelation(value)}`;
                    }

                    tr.appendChild(td);
                });

                tbody.appendChild(tr);
            });

            // Show matrix, hide loading
            document.getElementById('matrixLoading').style.display = 'none';
            document.getElementById('correlationMatrix').style.display = 'table';
        }

        // Generate trading insights
        function generateInsights(correlations) {
            const insights = [];

            // S&P 500 vs Bitcoin
            const sp500Btc = correlations.sp500?.bitcoin;
            if (sp500Btc !== null) {
                insights.push({
                    pair: 'üìà S&P 500 vs ‚Çø Bitcoin',
                    value: sp500Btc,
                    meaning: sp500Btc >= 0.50
                        ? 'Bitcoin moving with stocks - risk-on market environment.'
                        : sp500Btc <= 0
                        ? 'Bitcoin decoupling from stocks - crypto showing independence.'
                        : 'Moderate relationship - Bitcoin partially tracking stock market.',
                    signal: sp500Btc >= 0.70
                        ? { text: '‚ö†Ô∏è AVOID DOUBLING - Pick one (stocks OR crypto)', class: 'signal-neutral' }
                        : sp500Btc <= 0.20
                        ? { text: '‚úÖ BUY BOTH - Great diversification', class: 'signal-buy' }
                        : { text: '‚è∏Ô∏è HOLD - Moderate diversification benefit', class: 'signal-neutral' }
                });
            }

            // Bitcoin vs Ethereum
            const btcEth = correlations.bitcoin?.ethereum;
            if (btcEth !== null) {
                insights.push({
                    pair: '‚Çø Bitcoin vs Œû Ethereum',
                    value: btcEth,
                    meaning: btcEth >= 0.80
                        ? 'Very high correlation - ETH follows BTC almost perfectly.'
                        : btcEth <= 0.60
                        ? 'ETH showing relative strength or weakness vs BTC.'
                        : 'Normal crypto market correlation.',
                    signal: btcEth >= 0.85
                        ? { text: '‚ö†Ô∏è REDUNDANT - Pick BTC (larger cap)', class: 'signal-neutral' }
                        : btcEth <= 0.50
                        ? { text: '‚úÖ ETH OPPORTUNITY - Potential divergence play', class: 'signal-buy' }
                        : { text: '‚è∏Ô∏è NORMAL - Both move together', class: 'signal-neutral' }
                });
            }

            // S&P 500 vs Russell 2000
            const sp500Russell = correlations.sp500?.russell;
            if (sp500Russell !== null) {
                insights.push({
                    pair: 'üìà S&P 500 vs üè¢ Russell 2000',
                    value: sp500Russell,
                    meaning: sp500Russell >= 0.85
                        ? 'Broad market strength - large and small caps moving together.'
                        : sp500Russell <= 0.60
                        ? 'Market divergence - rotation between large and small caps.'
                        : 'Normal market correlation.',
                    signal: sp500Russell <= 0.50
                        ? { text: '‚ö†Ô∏è WARNING - Market fragmentation, possible correction', class: 'signal-sell' }
                        : sp500Russell >= 0.80
                        ? { text: '‚úÖ STRONG MARKET - Broad participation', class: 'signal-buy' }
                        : { text: '‚è∏Ô∏è NORMAL - Healthy market', class: 'signal-neutral' }
                });
            }

            // Nasdaq vs S&P 500
            const nasdaqSp500 = correlations.nasdaq?.sp500;
            if (nasdaqSp500 !== null) {
                insights.push({
                    pair: 'üíª Nasdaq vs üìà S&P 500',
                    value: nasdaqSp500,
                    meaning: nasdaqSp500 >= 0.90
                        ? 'Tech leading the market - high correlation normal.'
                        : nasdaqSp500 <= 0.70
                        ? 'Tech sector diverging - possible sector rotation.'
                        : 'Healthy tech/broad market relationship.',
                    signal: nasdaqSp500 >= 0.85
                        ? { text: '‚è∏Ô∏è PICK ONE - Similar exposure', class: 'signal-neutral' }
                        : nasdaqSp500 <= 0.60
                        ? { text: '‚úÖ SECTOR ROTATION - Diversify tech/value', class: 'signal-buy' }
                        : { text: '‚è∏Ô∏è NORMAL - Diversify as usual', class: 'signal-neutral' }
                });
            }

            // Dow vs Nasdaq (Value vs Growth)
            const dowNasdaq = correlations.dow?.nasdaq;
            if (dowNasdaq !== null) {
                insights.push({
                    pair: 'üè≠ Dow (Value) vs üíª Nasdaq (Growth)',
                    value: dowNasdaq,
                    meaning: dowNasdaq >= 0.80
                        ? 'Value and growth moving together - broad rally.'
                        : dowNasdaq <= 0.50
                        ? 'Clear value/growth divergence - rotation in progress.'
                        : 'Moderate value/growth correlation.',
                    signal: dowNasdaq <= 0.40
                        ? { text: '‚úÖ ROTATION OPPORTUNITY - Play the divergence', class: 'signal-buy' }
                        : dowNasdaq >= 0.85
                        ? { text: '‚è∏Ô∏è ALL EQUITIES RISING - Buy strongest sector', class: 'signal-neutral' }
                        : { text: '‚è∏Ô∏è NORMAL - Standard diversification', class: 'signal-neutral' }
                });
            }

            // Ethereum vs S&P 500
            const ethSp500 = correlations.ethereum?.sp500;
            if (ethSp500 !== null) {
                insights.push({
                    pair: 'Œû Ethereum vs üìà S&P 500',
                    value: ethSp500,
                    meaning: ethSp500 >= 0.60
                        ? 'ETH trading as risk-on asset with stocks.'
                        : ethSp500 <= 0.20
                        ? 'ETH decoupled - crypto-specific catalysts dominating.'
                        : 'ETH showing partial stock market influence.',
                    signal: ethSp500 <= 0.10
                        ? { text: '‚úÖ ETH INDEPENDENT - Potential outperformance', class: 'signal-buy' }
                        : ethSp500 >= 0.70
                        ? { text: '‚ö†Ô∏è ETH BETA PLAY - Just buy QQQ if you want tech', class: 'signal-neutral' }
                        : { text: '‚è∏Ô∏è MODERATE LINK - Normal crypto behavior', class: 'signal-neutral' }
                });
            }

            return insights;
        }

        // Build insights table
        function buildInsightsTable(correlations) {
            const insights = generateInsights(correlations);
            const tbody = document.getElementById('insightsBody');
            tbody.innerHTML = '';

            insights.forEach(insight => {
                const tr = document.createElement('tr');

                tr.innerHTML = `
                    <td><strong>${insight.pair}</strong></td>
                    <td><strong class="${getCorrelationClass(insight.value)}">${formatCorrelation(insight.value)}</strong></td>
                    <td>${insight.meaning}</td>
                    <td class="${insight.signal.class}">${insight.signal.text}</td>
                `;

                tbody.appendChild(tr);
            });
        }

        // Main initialization
        async function init() {
            const correlations = await fetchCorrelationData();

            if (correlations) {
                buildCorrelationMatrix(correlations);
                buildInsightsTable(correlations);

                // Update timestamp
                const now = new Date();
                document.getElementById('lastUpdate').textContent =
                    `Last Updated: ${now.toLocaleTimeString()} (30-day rolling)`;
            } else {
                document.getElementById('matrixLoading').innerHTML =
                    '<p style="color: var(--danger-color);">‚ö†Ô∏è Unable to load correlation data. Please ensure API server is running.</p>';
                document.getElementById('insightsBody').innerHTML =
                    '<tr><td colspan="4" style="color: var(--danger-color); text-align: center;">API connection failed. Start the correlation API server.</td></tr>';
            }
        }

        // Auto-refresh every 15 minutes
        init();
        setInterval(init, 15 * 60 * 1000);
    </script>
</body>
</html>
